{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create LeetCode Problem Folder",
      "type": "shell",
      "command": "python3 ${workspaceFolder}\\.vscode\\newProblem.py",
      "args": [
        "${workspaceFolder}",
        "${input:problemNumber}"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "problemNumber",
      "type": "promptString",
      "description": "Enter the problem number",
      "default": "1234"
    }
  ]
}
